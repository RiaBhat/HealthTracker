<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightSalmon"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.healthtracker.Account">

    <TextView
        android:id="@+id/w1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/lightGreen"
        android:text="Some Of The Pre-Defined Standards Are:"
        />
    <TextView
        android:id="@+id/w2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/w1"
        android:textColor="@color/lightGreen"
        android:text="1.Blood Pressure - 120/80"
        />
    <TextView
    android:id="@+id/w3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w2"
    android:textColor="@color/lightGreen"
    android:text="2.Sugar levels -
4.0 to 5.9 mmol/l (before meal)
7.8 mmol/l (atleast 90 minutes after meal)"
    />
    <TextView
        android:id="@+id/w4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w3"
        android:textColor="@color/lightGreen"
        android:text="3. The normal range for hemoglobin is:
        For men, 13.5 to 17.5 grams per deciliter.
        For women, 12.0 to 15.5 grams per deciliter."
        />
    <TextView
        android:id="@+id/w5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w4"
        android:textColor="@color/lightGreen"
        android:text="4. The normal RBC count -
Men (4.7 to 6.1 million cells/ul)
Female (4.2 to 5.4 million cells/ul)"
        />
    <TextView
        android:id="@+id/w6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w5"
        android:textColor="@color/lightGreen"
        android:text="5. Normal Platelet count - 1,50,000 to 4,50,000"
        />
    <TextView
        android:id="@+id/w7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w6"
        android:textColor="@color/lightGreen"
        android:text="6. WBC - 4.5 to 11 * 10^9/l"
        />
    <TextView
        android:id="@+id/w8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/w7"
        android:textColor="@color/lightGreen"
        android:text="7. Body Mass Index -
18.5 to 24.9
formula= (weight(in Kg) / hieght (in meter))/ hieght (in meter)"
        />

</RelativeLayout>
</ScrollView>
